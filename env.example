# Server
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/word2wallet
MONGODB_TEST_URI=mongodb://localhost:27017/word2wallet_test

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRE=30d

# Core URLs
API_URL=http://localhost:5000/api
FRONTEND_URL=http://localhost:3065
BOOK_LANDING_URL=http://localhost:3001
LANDING_PAGE_URL=http://localhost:3001
READER_FRONTEND_URL=http://localhost:3002
BASE_URL=http://localhost:5000/uploads

# CORS
CORS_ORIGINS=http://localhost:3065,http://localhost:3001,http://localhost:3002

# File uploads and storage
MAX_FILE_SIZE=100MB

# Google Cloud Storage Configuration
GCS_BUCKET_NAME=your-gcs-bucket-name
GCS_PROJECT_ID=your-gcs-project-id
# Option 1: Use service account key file
GCS_KEY_FILENAME=path/to/service-account-key.json
# Option 2: Use credentials directly (alternative to key file)
# GCS_CLIENT_EMAIL=your-service-account-email@project.iam.gserviceaccount.com
# GCS_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n
# Optional: Custom public URL (if using CDN or custom domain)
# GCS_PUBLIC_URL=https://storage.googleapis.com/your-bucket-name

# Redis / job queue
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate limiting and demo mode
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
ALLOW_DEMO_LOGIN=false

# Admin user defaults
ADMIN_EMAIL=admin@word2wallet.com
ADMIN_PASSWORD=admin123456
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-5

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_BASIC_PRICE_ID=price_your_basic_price_id_here
STRIPE_PREMIUM_PRICE_ID=price_your_premium_price_id_here

# Mailgun (required for email delivery)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here
MAILGUN_FROM_EMAIL=noreply@yourdomain.com
MAILGUN_REGION=US
SUPPORT_EMAIL=support@yourdomain.com

# Default sender info for campaigns
DEFAULT_SENDER_NAME=Word2Wallet
DEFAULT_SENDER_EMAIL=noreply@word2wallet.com
DEFAULT_SENDER_COMPANY=Word2Wallet

# Newsletter automation
MAILERLITE_API_KEY=your_mailerlite_api_key_here
MAILERLITE_FROM_EMAIL=noreply@yourdomain.com


# Email marketing integrations
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
CONVERTKIT_API_KEY=your_convertkit_api_key_here
ACTIVECAMPAIGN_API_KEY=your_activecampaign_api_key_here
ACTIVECAMPAIGN_ACCOUNT=your_activecampaign_account_here
DRIP_API_KEY=your_drip_api_key_here
DRIP_ACCOUNT=your_drip_account_here
SENDINBLUE_API_KEY=your_sendinblue_api_key_here

# Payment gateway integrations
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_SANDBOX=true
SQUARE_ACCESS_TOKEN=your_square_access_token_here
SQUARE_LOCATION_ID=your_square_location_id_here
SQUARE_SANDBOX=true
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_TEST_MODE=true