# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/word2wallet
MONGODB_TEST_URI=mongodb://localhost:27017/word2wallet_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRE=30d

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads
EPUB_UPLOAD_PATH=./uploads/epubs

# Storage Configuration
STORAGE_PROVIDER=local
BASE_URL=http://localhost:5000/files

# CORS Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3065

# Demo Mode (set to true to enable demo login in production)
ALLOW_DEMO_LOGIN=false

# Rate Limiting (Development-friendly settings)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Admin User Configuration (Optional - defaults will be used if not provided)
ADMIN_EMAIL=admin@word2wallet.com
ADMIN_PASSWORD=admin123456
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_BASIC_PRICE_ID=price_your_basic_price_id_here
STRIPE_PREMIUM_PRICE_ID=price_your_premium_price_id_here

# Mailgun Configuration
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here
MAILGUN_FROM_EMAIL=noreply@yourdomain.com

# S3 Configuration
S3_ACCESS_KEY_ID=your_s3_access_key_here
S3_SECRET_ACCESS_KEY=your_s3_secret_key_here
S3_REGION=us-east-1
S3_BUCKET=your_s3_bucket_name_here
S3_ENDPOINT=your_s3_endpoint_here
S3_BASE_URL=https://your_s3_bucket_name_here.s3.us-east-1.amazonaws.com