# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/word2wallet
MONGODB_TEST_URI=mongodb://localhost:27017/word2wallet_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRE=30d

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads
EPUB_UPLOAD_PATH=./uploads/epubs

# Storage Configuration
STORAGE_PROVIDER=local
BASE_URL=http://localhost:5000/files

# CORS Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3065

# Demo Mode (set to true to enable demo login in production)
ALLOW_DEMO_LOGIN=false

# Rate Limiting (Development-friendly settings)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Admin User Configuration (Optional - defaults will be used if not provided)
ADMIN_EMAIL=admin@word2wallet.com
ADMIN_PASSWORD=admin123456
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_BASIC_PRICE_ID=price_your_basic_price_id_here
STRIPE_PREMIUM_PRICE_ID=price_your_premium_price_id_here

# Mailgun Configuration (Required for email confirmation)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here
MAILGUN_FROM_EMAIL=noreply@yourdomain.com
MAILGUN_REGION=US
SUPPORT_EMAIL=support@yourdomain.com

# Default Sender Information for Email Campaigns (to avoid spam)
DEFAULT_SENDER_NAME=Word2Wallet
DEFAULT_SENDER_EMAIL=noreply@word2wallet.com
DEFAULT_SENDER_COMPANY=Word2Wallet

# Landing Page Configuration (Required for email confirmation)
LANDING_PAGE_URL=http://localhost:3001
API_URL=http://localhost:5000/api

# S3 Configuration
S3_ACCESS_KEY_ID=your_s3_access_key_here
S3_SECRET_ACCESS_KEY=your_s3_secret_key_here
S3_REGION=us-east-1
S3_BUCKET=your_s3_bucket_name_here
S3_ENDPOINT=your_s3_endpoint_here
S3_BASE_URL=https://your_s3_bucket_name_here.s3.us-east-1.amazonaws.com

# Email Marketing Integrations
# Mailchimp
MAILCHIMP_API_KEY=your_mailchimp_api_key_here

# ConvertKit
CONVERTKIT_API_KEY=your_convertkit_api_key_here

# ActiveCampaign
ACTIVECAMPAIGN_API_KEY=your_activecampaign_api_key_here
ACTIVECAMPAIGN_ACCOUNT=your_activecampaign_account_here

# Drip
DRIP_API_KEY=your_drip_api_key_here
DRIP_ACCOUNT=your_drip_account_here

# Sendinblue
SENDINBLUE_API_KEY=your_sendinblue_api_key_here

# Payment Gateway Integrations
# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_SANDBOX=true

# Square
SQUARE_ACCESS_TOKEN=your_square_access_token_here
SQUARE_LOCATION_ID=your_square_location_id_here
SQUARE_SANDBOX=true

# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_TEST_MODE=true